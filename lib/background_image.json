{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema#",
  "id": "http://schema.cardwirth.org/background_image#",
  "required": true,
  "additionalProperties": false,
  "properties": {
    "top": {
      "type": "integer",
      "required": true
    },
    "left": {
      "type": "integer",
      "required": true
    },
    "width": {
      "type": "integer",
      "minimum": 0,
      "required": true
    },
    "height": {
      "type": "integer",
      "minimum": 0,
      "required": true
    },
    "image": {
      "type": "string",
      "format": "uri",
      "required": true
    },
    "mask": {
      "type": "boolean",
      "required": true
    },
    "flagName": {
      "type": "string",
      "required": true
    }
  }
}